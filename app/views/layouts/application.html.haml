%html
  %head
    .container
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      = csrf_meta_tags

  %body
    %nav.navbar.navbar-inverse
      %h1 Dark Heresy Character Creater
      %ul.nav.navbar-nav.navbar-right
        %span.glyphicon.glyphicon-user
        - if current_user
          %li
            = link_to 'Log Out', sign_out_path, method: :delete, class: 'glyphicon glyphicon-log-out'
        - else
          %li
            = link_to 'Log In', sign_in_path, method: :get, class: 'glyphicon glyphicon-log-in'
          %li
            = link_to 'Sign Up', new_user_path, class: 'glyphicon glyphicon-pencil'

    - flash.each do |key, value|
      %div{ :class => "alert alert#{key}" }= value
    = yield
